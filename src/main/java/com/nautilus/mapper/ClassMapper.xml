<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nautilus.mapper.ClassMapper">

	<select id="findAll" resultType="com.nautilus.vo.Classes">
		SELECT * FROM classes ORDER BY korName
	</select>

	<select id="findEffect" parameterType="String"
	resultType="com.nautilus.vo.ClassEffect">
		SELECT * FROM classeffect WHERE korName = #{className} 
	</select>
	
	<select id="findAllName" resultType="String">
		SELECT korName FROM classes ORDER BY korName
	</select>
</mapper>